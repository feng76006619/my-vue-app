.pixivic-confirm-wrapper
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  display flex
  justify-content center
  align-items center
  z-index 9999
  .pixivic-overlay
    position fixed
    top 0
    right 0
    bottom 0
    left 0
    background-color rgb(33, 33, 33)
    opacity 0.4
    z-index 9998
  .pixivic-confirm
    position relative
    width 80%
    background #ffffff
    border-radius 2px
    box-shadow 0 3px 1px -2px rgba(0,0,0,.2), 0 2px 2px 0 rgba(0,0,0,.14), 0 1px 5px 0 rgba(0,0,0,.12)
    box-sizing content-box
    z-index 9999
    &-title
      padding 16px 24px 10px
      font-size 22px
      color rgba(0, 0, 0, .87)
    &-content
      padding 20px
    &-btns
      width 100%
      display flex
      justify-content flex-end
      padding 12px
      box-sizing border-box
    &-btn
      width 60px
      text-align center
      color #43a047
      margin-right 8px
      padding 8px
    .danger
      color red